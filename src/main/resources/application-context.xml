<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
  		http://www.springframework.org/schema/context
  		http://www.springframework.org/schema/context/spring-context-3.2.xsd ">

    <context:spring-configured/>
    <context:annotation-config/>
    <context:component-scan base-package="app.library"/>

    <bean id="propertiesConfig" class="app.library.config.PropertyConfig"/>

    <bean id="hibernateConfig" class="app.library.config.HibernateConfig"/>

    <bean id="sessionFactoryProvider" class="app.library.config.SessionFactoryProvider"/>

    <bean id="hibernateConnectionManager" class="app.library.config.HibernateConnectionManager">
        <constructor-arg ref="propertiesConfig"/>
        <constructor-arg ref="hibernateConfig"/>
        <constructor-arg ref="sessionFactoryProvider"/>
    </bean>

    <bean id="authorRepository" class="app.library.repository.AuthorRepository">
        <constructor-arg ref="hibernateConnectionManager"/>
    </bean>

    <bean id="bookRepository" class="app.library.repository.BookRepository">
        <constructor-arg ref="hibernateConnectionManager"/>
    </bean>

    <bean id="journalRepository" class="app.library.repository.JournalRepository">
        <constructor-arg ref="hibernateConnectionManager"/>
    </bean>
</beans>